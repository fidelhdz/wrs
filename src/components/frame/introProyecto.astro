---
interface introProyectoProps {
    negocio: string;
    ciudad: string;
}

const { negocio, ciudad } = Astro.props as introProyectoProps;
---
<section id="intro-proyecto">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-12 col-xl-6 text-center">
                <span>{ ciudad }</span>
            </div>
            <div class="col-12 col-xl-6">
                <h4>{ negocio }</h4>
                <slot name="introProyecto" />
            </div>
        </div>
    </div>
</section>

<style lang="scss">
    #intro-proyecto {
        padding-bottom: 60px;

        h4 {
            color: rgb(255 255 255);
            font-weight: bold;
            font-size: 0.75rem;
            text-transform: uppercase;
            transform: translateY(-70px);

            @media screen and (width < 75em){
                transform: unset;
            }
        }

        span {
            color: var(--wrs-lime-color);
            text-transform: uppercase;
            font-size: 0.75rem;
            font-weight: 600;
            
            @media screen and (width < 75em){
                width: 100%;
                display: block;
                text-align: end !important;
                margin: 40px 0;
            }
        }
    }
</style>