---
interface imagenProps {
    imagen: string;
}

const { imagen } = Astro.props as imagenProps;
---

<section class="imagen-proyecto" style={ { backgroundImage: `url(${imagen})` } }>
    
</section>

<style lang="scss">
    .imagen-proyecto {
        margin: 60px 0 100px;
        min-height: 500px;
        height: 800px;
        background-color: black;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: top center;
        background-attachment: fixed;

        @media screen and (width < 75em){
            height: 350px;
            margin: 40px 0;
            background-attachment: unset;
        }
    }
</style>